    <!-- defaults -->

    <clr:Double x:Key="BackgroundOpacity">0.7</clr:Double>

    <Thickness x:Key="TextBoxPaddingDefault">10</Thickness>
    <CornerRadius x:Key="CornerRadiusDefault">3</CornerRadius>

    <!--shelf -->
    <Thickness x:Key="ShelfMargin">10,0,10,0</Thickness>
    <GridLength x:Key="ShelfGridWidth">1400</GridLength>

    <!-- Font Sizes-->
    <clr:Double x:Key="DefaultFontSizeTiny">12</clr:Double>
    <clr:Double x:Key="DefaultFontSizeSmall">14</clr:Double>
    <clr:Double x:Key="DefaultFontSize">18</clr:Double>
    <clr:Double x:Key="DefaultFontSizeBig">20</clr:Double>
    <clr:Double x:Key="DefaultFontSizeFat">24</clr:Double>
    <clr:Double x:Key="DefaultFontSizeExtrem">34</clr:Double>

    <clr:Double x:Key="TitleFontSize">28</clr:Double>

    <clr:Double x:Key="ShelfLabelFontSize">16</clr:Double>
    <clr:Double x:Key="ShelfLabelFontSizeSmall">13</clr:Double>
    <clr:Double x:Key="ShelfLabelFontSizeTiny">12</clr:Double>

    <clr:Double x:Key="CoverTitleFontSize">60</clr:Double>
    <clr:Double x:Key="CoverAuthorFontSize">45</clr:Double>

    <clr:Double x:Key="SpineFontSize">16</clr:Double>
    <clr:Double x:Key="SpineSmallFontSize">15</clr:Double>
    <clr:Double x:Key="SpineFontSizeTiny">14</clr:Double>

    <clr:Double x:Key="BackCoverTitleFontSize">24</clr:Double>
    <clr:Double x:Key="BackCoverFontSize">18</clr:Double>

    <!-- Filter -->

    <clr:Double x:Key="FilterFontSize">22</clr:Double>
    <clr:Double x:Key="FilterTitleFontSize">25</clr:Double>

    <clr:Double x:Key="FilterCardWidth">430</clr:Double>
    <GridLength x:Key="FilterCardGridWidth">430</GridLength>

    <clr:Double x:Key="MaxFilterCardHeight">300</clr:Double>


    <clr:Double x:Key="FilterChooserCardHeight">220</clr:Double>
    <clr:Double x:Key="FilterChooserFontSize">20</clr:Double>
    <clr:Double x:Key="FilterChooserSmallFontSize">13</clr:Double>

    <!-- COVER -->
    <Thickness x:Key="CoverMargin">25</Thickness>
    <Thickness x:Key="SpineMargin">10</Thickness>

    <GridLength x:Key="BackCoverColumnWidth">160</GridLength>
    <Thickness x:Key="BackCoverBottomMargin">0,0,0,4</Thickness>

    <Thickness x:Key="SpineBorderThickness">10</Thickness>

    <!-- availability -->
    <Thickness x:Key="AvailabilityTextBoxPadding">8,8,8,8</Thickness>
    <clr:Double x:Key="AvailabilityMaxWidth">360</clr:Double>
    <clr:Double x:Key="AvailabilityMinWidth">160</clr:Double>

    <!-- info shield -->
    <GridLength x:Key="SortDirectionRadioButtonHeight">30</GridLength>
    <PointCollection x:Key="AscendingTriangle">0,10 12,0, 24,10</PointCollection>
    <PointCollection x:Key="DescendingTriangle">0,0 12,10, 24,0</PointCollection>


</ResourceDictionary>