  <Style x:Key="OpenedBookStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid Opacity="{Binding DropShadowOpacity}">

            <!--  BOOK  -->
            <Grid>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{Binding BackCover.Width}" />
                <ColumnDefinition Width="{Binding Spine.Width}" />
                <ColumnDefinition Width="{Binding FrontCover.Width}" />
              </Grid.ColumnDefinitions>
              <!--  drop shadow  -->
              <Border Grid.ColumnSpan="3"
                      Background="Black"
                      Effect="{StaticResource DropshadowEffect}"
                      IsHitTestVisible="False" />
              <!--  back cover  -->
              <views:View Grid.Column="0" DataContext="{Binding BackCover}" />
              <!--  spine  -->
              <views:View Grid.Column="1" DataContext="{Binding Spine}" />
              <!--  front cover cover  -->
              <views:View Grid.Column="2" DataContext="{Binding FrontCover}" />
            </Grid>

            <Grid Height="100" VerticalAlignment="Bottom">
              <Grid.RenderTransform>
                <TranslateTransform xx:Freeze="true" Y="90" />
              </Grid.RenderTransform>
              <Viewbox Width="55" Height="55">
                <views:View DataContext="{Binding ButtonVM}" />
              </Viewbox>
            </Grid>

          </Grid>

        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="OpenedBookLayerStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid>
            <views:View HorizontalAlignment="Left" DataContext="{Binding LeftLayer}" />
            <views:View VerticalAlignment="Top"
                        DataContext="{Binding TopLayer}"
                        Visibility="Hidden" />
            <views:View HorizontalAlignment="Right" DataContext="{Binding RightLayer}" />
            <views:View VerticalAlignment="Bottom"
                        DataContext="{Binding BottomLayer}"
                        Visibility="Hidden" />
            <!--  book opened  -->
            <Grid x:Name="root"
                  HorizontalAlignment="Center" VerticalAlignment="Center">
              <views:View DataContext="{Binding BookVM}" />
            </Grid>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="LeftLayerStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid Margin="50,0,0,0" ClipToBounds="False">
            <Ellipse Width="180" Height="90"
                     Margin="16,0,0,0"
                     xx:Freeze="true" Fill="Transparent" />
            <Ellipse Width="90" Height="90"
                     Margin="8,0,0,0"
                     Fill="{Binding CoverColorScheme.Primary}" />
            <Path Width="50" Height="50"
                  Data="F1M646.688,13.5518L646.783,13.4593 646.965,13.639 668.383,35.0583 689.459,35.0583 665.155,10.751 657.503,3.10126 657.323,2.92023 664.876,-4.63837 689.184,-28.9417 668.109,-28.9417 646.688,-7.52637 636.15,3.01398 646.688,13.5518z"
                  Fill="{Binding CoverColorScheme.Secondary}"
                  RenderTransformOrigin="0.5,0.5" Stretch="Uniform" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="RightLayerStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid Margin="0,0,50,0" ClipToBounds="False">
            <Ellipse Width="180" Height="90"
                     Margin="0,0,16,0"
                     Fill="Transparent" />
            <Ellipse Width="90" Height="90"
                     Margin="0,0,8,0"
                     Fill="{Binding CoverColorScheme.Primary}" />
            <Path Width="50" Height="50"
                  Data="F1M568.254,-7.43524L568.159,-7.34277 567.977,-7.52246 546.559,-28.9417 525.484,-28.9417 549.787,-4.63446 557.439,3.01532 557.619,3.19629 550.067,10.7549 525.758,35.0583 546.834,35.0583 568.254,13.6429 578.792,3.10254 568.254,-7.43524z"
                  Fill="{Binding CoverColorScheme.Secondary}"
                  RenderTransformOrigin="0.5,0.5" Stretch="Uniform" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="TopLayerStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid>
            <Border BorderBrush="Red" BorderThickness="1" IsHitTestVisible="False">
              <Label Content="Top" />
            </Border>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="BottomLayerStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid>
            <Label Content="Bottom" />
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

</ResourceDictionary>