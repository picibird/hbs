<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:picibird.wpf.core.views;assembly=picibits.wpf.core" xmlns:xx="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options">

  <ResourceDictionary.MergedDictionaries>
    <ResourceDictionary Source="pack://application:,,,/picibits.wpf.app;component/styles/CoreStyles.xaml" />
    <ResourceDictionary Source="pack://application:,,,/hbs.wpf;component/styles/Values.xaml" />
    <ResourceDictionary Source="pack://application:,,,/hbs.wpf;component/styles/Colors.xaml" />
    <ResourceDictionary Source="pack://application:,,,/hbs.wpf;component/styles/Fonts.xaml" />
    <ResourceDictionary Source="pack://application:,,,/hbs.wpf;component/styles/Icons.xaml" />
    <ResourceDictionary Source="pack://application:,,,/hbs.wpf;component/styles/Images.xaml" />
    <ResourceDictionary Source="pack://application:,,,/hbs.wpf;component/styles/Controls.xaml" />
    <ResourceDictionary>
      <DropShadowEffect x:Key="DropshadowEffect"
                        BlurRadius="40" Direction="270" ShadowDepth="13"
                        Color="Black" />
    </ResourceDictionary>
  </ResourceDictionary.MergedDictionaries>


  <Style x:Key="ShadowStyle"
         BasedOn="{StaticResource ViewStyle}"
         TargetType="{x:Type Control}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Border>
            <Border.BorderBrush>
              <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,0.9">
                <GradientStop Offset="0.9" Color="Black" />
                <GradientStop Color="Transparent" />
              </LinearGradientBrush>
            </Border.BorderBrush>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

