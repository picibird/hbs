    <Style
        x:Key="FilterChooserViewStyle"
        BasedOn="{StaticResource FilterBaseViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ContentControl x:Name="CollapsableRoot" Style="{StaticResource CollapsedTransitionStyle}">
                        <i:Interaction.Triggers>
                            <ei:DataTrigger Binding="{Binding VisualState}" Value="Discarded">
                                <ei:GoToStateAction StateName="Hide" TargetObject="{Binding ElementName=CollapsableRoot}" />
                            </ei:DataTrigger>
                        </i:Interaction.Triggers>
                        <ContentControl HorizontalAlignment="Stretch" Style="{StaticResource CardBackground}">
                            <Grid x:Name="root" MinHeight="180">
                                <ItemsControl
                                    Margin="0,15"
                                    VerticalAlignment="Center"
                                    ItemsSource="{Binding Choosers}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,5,0,5">
                                                <views:View />
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Border x:Name="ClosedLayer" Background="{StaticResource HBS_BLUE_BRUSH}">
                                    <TextBox
                                        Margin="10,10,0,0"
                                        HorizontalContentAlignment="Left"
                                        VerticalContentAlignment="Top"
                                        Foreground="{StaticResource HBS_WHITE_BRUSH}"
                                        Style="{StaticResource FilterTitleTextBoxStyle}"
                                        Text="{Binding Resources[Filter]}" />
                                </Border>
                                <!--  visual states  -->
                                <i:Interaction.Triggers>
                                    <ei:DataTrigger Binding="{Binding VisualState}" Value="Closed">
                                        <ei:GoToStateAction StateName="Closed" TargetObject="{Binding ElementName=root}" />
                                    </ei:DataTrigger>
                                    <ei:DataTrigger Binding="{Binding VisualState}" Value="Opened">
                                        <ei:GoToStateAction StateName="Opened" TargetObject="{Binding ElementName=root}" />
                                    </ei:DataTrigger>
                                </i:Interaction.Triggers>
                                <VisualStateManager.CustomVisualStateManager>
                                    <ei:ExtendedVisualStateManager />
                                </VisualStateManager.CustomVisualStateManager>
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup ei:ExtendedVisualStateManager.UseFluidLayout="True">
                                        <VisualStateGroup.Transitions>
                                            <VisualTransition GeneratedDuration="0:0:0.3">
                                                <ei:ExtendedVisualStateManager.TransitionEffect>
                                                    <ee:FadeTransitionEffect />
                                                </ei:ExtendedVisualStateManager.TransitionEffect>
                                            </VisualTransition>
                                        </VisualStateGroup.Transitions>
                                        <VisualState x:Name="Closed" />
                                        <VisualState x:Name="Opened">
                                            <Storyboard>
                                                <ObjectAnimationUsingKeyFrames Storyboard.TargetName="ClosedLayer" Storyboard.TargetProperty="(FrameworkElement.Visibility)">
                                                    <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Hidden}" />
                                                </ObjectAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Grid>
                        </ContentControl>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style
        x:Key="FilterContainerViewStyle"
        BasedOn="{StaticResource FilterBaseViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid>
                        <views:View
                            x:Name="ChooserView"
                            VerticalAlignment="Top"
                            DataContext="{Binding Chooser}" />
                        <views:View
                            x:Name="FilterView"
                            VerticalAlignment="Top"
                            DataContext="{Binding Filter}" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  BUTTON  -->

    <Style
        x:Key="FilterButtonTextBoxStyle"
        BasedOn="{StaticResource FilterTextBoxStyle}"
        TargetType="{x:Type TextBox}">
        <Setter Property="Text" Value="{Binding Text}" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="Foreground" Value="{StaticResource HBS_BLUE_LIGHT_BRUSH}" />
    </Style>

    <Style
        x:Key="FilterButtonViewStyle"
        BasedOn="{StaticResource ViewBaseStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border
                        x:Name="BackgroundBorder"
                        Background="{StaticResource HBS_BLUE_BRUSH}"
                        CornerRadius="{StaticResource CornerRadiusDefault}">
                        <Grid>
                            <Rectangle Margin="0,0,0,5" Fill="{StaticResource HBS_BLUE_BRUSH}" />
                            <TextBox Style="{StaticResource FilterButtonTextBoxStyle}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FilterContentControlStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContentControl">
                    <ContentControl HorizontalAlignment="Stretch" Style="{StaticResource CardBackground}">
                        <StackPanel Orientation="Vertical">
                            <Rectangle Height="15" />
                            <TextBox
                                Style="{StaticResource FilterTitleTextBoxStyle}"
                                Text="{Binding FilterName, Mode=OneWay}"
                                Visibility="{Binding FilterName, Converter={StaticResource CollapsedIfNoDataConverter}}" />
                            <!--  selected filters string  -->
                            <ContentControl x:Name="SeletedFiltersCollapsable" Style="{StaticResource CollapsedTransitionStyle}">
                                <TextBlock
                                    MaxWidth="{Binding ElementName=SeletedFiltersCollapsable, Path=ActualWidth}"
                                    MaxHeight="100"
                                    Style="{StaticResource FilterTextBlockStyle}"
                                    Text="{Binding AppliedInfoString, Mode=OneWay}"
                                    Visibility="{Binding AppliedInfoString, Converter={StaticResource CollapsedIfNoDataConverter}}" />
                            </ContentControl>
                            <!--  filter  -->
                            <ContentControl x:Name="FadingCC" Style="{StaticResource CollapsedTransitionStyle}">
                                <ContentPresenter
                                    Margin="{TemplateBinding Padding}"
                                    Content="{TemplateBinding Content}"
                                    ContentTemplate="{TemplateBinding ContentTemplate}"
                                    Cursor="{TemplateBinding Cursor}" />
                            </ContentControl>
                            <Rectangle Height="15" />
                            <!--  apply button  -->
                            <ContentControl x:Name="CollApplyButton" Style="{StaticResource CollapsedTransitionStyle}">
                                <views:View DataContext="{Binding ApplyButtonViewModel}" />
                            </ContentControl>
                        </StackPanel>
                        <!--  TRIGGER  -->
                        <i:Interaction.Triggers>
                            <!--  Loaded  -->
                            <ei:DataTrigger Binding="{Binding ViewIsLoadedLater}" Value="True">
                                <ei:GoToStateAction
                                    StateName="Hide"
                                    TargetObject="{Binding ElementName=CollApplyButton}"
                                    UseTransitions="False" />
                            </ei:DataTrigger>
                            <ei:DataTrigger Binding="{Binding VisualState}" Value="Edit">
                                <ei:GoToStateAction StateName="Show" TargetObject="{Binding ElementName=FadingCC}" />
                                <ei:GoToStateAction StateName="Show" TargetObject="{Binding ElementName=CollApplyButton}" />
                            </ei:DataTrigger>
                            <ei:DataTrigger Binding="{Binding VisualState}" Value="Normal">
                                <ei:GoToStateAction StateName="Hide" TargetObject="{Binding ElementName=FadingCC}" />
                                <ei:GoToStateAction StateName="Hide" TargetObject="{Binding ElementName=CollApplyButton}" />
                            </ei:DataTrigger>
                            <ei:DataTrigger Binding="{Binding VisualState}" Value="Delete">
                                <ei:GoToStateAction StateName="Hide" TargetObject="{Binding ElementName=FadingCC}" />
                                <ei:GoToStateAction StateName="Show" TargetObject="{Binding ElementName=CollApplyButton}" />
                            </ei:DataTrigger>
                            <ei:DataTrigger Binding="{Binding HasSelected}" Value="True">
                                <ei:GoToStateAction StateName="Show" TargetObject="{Binding ElementName=CollApplyButton}" />
                            </ei:DataTrigger>
                        </i:Interaction.Triggers>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="FilterViewStyle"
        BasedOn="{StaticResource FilterBaseViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ContentControl HorizontalAlignment="Stretch" Style="{StaticResource FilterContentControlStyle}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ListFilterViewStyle"
        BasedOn="{StaticResource FilterBaseViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ContentControl HorizontalAlignment="Stretch" Style="{StaticResource FilterContentControlStyle}">
                        <views:ItemsView DataContext="{Binding FilterSelectionViewModel}" />
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="FilterSelectionListViewStyle"
        BasedOn="{StaticResource ItemsViewStyle}"
        TargetType="{x:Type ItemsControl}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Vertical" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Border
                        MaxHeight="{Binding MaxHeight}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <ScrollViewer Style="{StaticResource VerticalScrollViewerStyle}">
                            <ContentControl
                                x:Name="cc"
                                helper:StateHelper.State="{Binding VisualState}"
                                Background="Transparent">
                                <ItemsPresenter />
                            </ContentControl>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="FilterSelectionItemViewStyle"
        BasedOn="{StaticResource ViewBaseStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <CheckBox
                        Margin="0,0,10,0"
                        DockPanel.Dock="Right"
                        IsChecked="{Binding IsChecked}"
                        Style="{StaticResource FilterCheckBox}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  DATE  -->
    <Style
        x:Key="DateFilterViewStyle"
        BasedOn="{StaticResource FilterBaseViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <ContentControl HorizontalAlignment="Stretch" Style="{StaticResource FilterContentControlStyle}">
                        <Grid>
                            <Controls:RangeSlider />
                        </Grid>
                    </ContentControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>