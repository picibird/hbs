    <conv:CollapsedIfNoDataConverter x:Key="CollapsedIfNoDataConverter" />

    <Style
        x:Key="ActiveFilterListViewStyle"
        BasedOn="{StaticResource ItemsViewStyle}"
        TargetType="{x:Type ItemsControl}">
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <StackPanel IsItemsHost="True" Orientation="Vertical" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ItemsControl}">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                        <!--<ScrollViewer Style="{StaticResource VerticalScrollViewerStyle}" Background="Crimson">
                            <ItemsPresenter />
                        </ScrollViewer>-->
                        <ItemsPresenter />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style
        x:Key="FilterBaseViewStyle"
        BasedOn="{StaticResource ViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Margin" Value="0,5,0,5" />
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <Style x:Key="CardBackground" TargetType="{x:Type ContentControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border
                        Background="{StaticResource HBS_WHITE_BRUSH}"
                        BorderThickness="1"
                        CornerRadius="{StaticResource CornerRadiusDefault}">
                        <ContentPresenter Margin="{TemplateBinding Padding}" Content="{TemplateBinding ContentControl.Content}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="FilterChooserTextBoxStyle"
        BasedOn="{StaticResource FilterTextBoxStyle}"
        TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="{StaticResource FilterChooserFontSize}" />
    </Style>

    <Style
        x:Key="FilterChooserSmallTextBoxStyle"
        BasedOn="{StaticResource FilterTextBoxStyle}"
        TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="{StaticResource FilterChooserSmallFontSize}" />
        <Setter Property="Margin" Value="0,5,0,0" />
    </Style>

    <Style
        x:Key="ChooserButtonViewStyle"
        BasedOn="{StaticResource ViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <UserControl HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <StackPanel Background="Transparent" Orientation="Vertical">
                            <TextBox Style="{StaticResource FilterChooserTextBoxStyle}" Text="{Binding Name}" />
                        </StackPanel>
                    </UserControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        x:Key="ChooserButtonWithCountViewStyle"
        BasedOn="{StaticResource ViewStyle}"
        TargetType="{x:Type Control}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <UserControl HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                        <StackPanel Background="Transparent" Orientation="Horizontal">
                            <TextBox Style="{StaticResource FilterChooserTextBoxStyle}" Text="{Binding Name}" />
                            <TextBox Style="{StaticResource FilterChooserTextBoxStyle}" Text="{Binding Frequency}" />
                        </StackPanel>
                    </UserControl>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

